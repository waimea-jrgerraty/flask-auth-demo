{#=====================================================
Things list page
- List of things passed in as 'things' array
- Form for adding a new thing
=====================================================#}
{% extends "pages/base.jinja" %}
{% block title %}
    Flask Demo - All Things
{% endblock title %}
{% block content %}
    <h1>Things...</h1>
    <article>
        <ul>
            {% for thing in things %}
                <li>
                    <a href="/thing/{{ thing.id }}">{{ thing.name }}</a>
                </li>
            {% else %}
                <p>None!</p>
            {% endfor %}
        </ul>
    </article>
    {% if session.userid %}
        <article>
            <h3>Add a New Thing...</h3>
            <form action="/add" method="post">
                <input type="text" name="name" placeholder="Name of new thing" required>
                <button>Add the Thing</button>
            </form>
        </article>
    {% endif %}
{% endblock content %}
